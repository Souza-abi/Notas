@model Notas.Models.Aluno

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">

                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors).Distinct())
                    {
                        @error.ErrorMessage
                    }

                </div>
            }


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlunoName" class="control-label"></label>
                <input asp-for="AlunoName" class="form-control" />
                <span asp-validation-for="AlunoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prova" class="control-label"></label>
                <input asp-for="Prova" class="form-control" />
                <span asp-validation-for="Prova" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trabalho" class="control-label"></label>
                <input asp-for="Trabalho" class="form-control" />
                <span asp-validation-for="Trabalho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teste" class="control-label"></label>
                <input asp-for="Teste" class="form-control" />
                <span asp-validation-for="Teste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="@Url.Content("~/js/jquery-validate-pt-BR.js")"</script>
}
