@model IEnumerable<Notas.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlunoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prova)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trabalho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teste)
            </th>
            <th>
                Media
            </th>
            <th>
                Status
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string Resultado;
            double Media = (item.Teste + item.Trabalho + item.Prova) / 3;
            
            if (Media > 6)
            {
                 Resultado = "Aprovado";
            }
            else
            {
                 Resultado = "Reprovado";
            }

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AlunoName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prova)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trabalho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teste)
                </td>
                <td>
                    @Media.ToString("0.00")
                </td>
                <td>
                    @Resultado
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.AlunoId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AlunoId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AlunoId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
